<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.project.coffee.shop.entity.Order" table="Orders">
        <id name="id" column="id" type="int"/>
        <property name="customerFullName" column="customer_full_name" type="string" not-null="true"/>
        <property name="customerAddress" column="customer_address" type="string" not-null="true"/>
        <property name="totalCost" column="total_cost" type="int" not-null="true"/>
    </class>
</hibernate-mapping>