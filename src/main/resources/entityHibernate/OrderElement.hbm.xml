<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.project.coffee.shop.entity.OrderElement" table="OrderElements">
        <id name="id" column="id" type="int">
            <generator class="native"/>
        </id>
        <property name="orderId" column="order_id" type="int" not-null="true"/>
        <many-to-one name="coffee" column="coffee_id" class="com.project.coffee.shop.entity.Coffee" not-null="true"/>
        <property name="amountOfCoffee" column="amount_of_coffee" type="int" not-null="true"/>
        <property name="totalCost" column="total_cost" type="int" not-null="true"/>
    </class>
</hibernate-mapping>